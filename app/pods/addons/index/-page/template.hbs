{{#-ui/hero}}
  <h1 class="headline">
    Addons
  </h1>
  <p class="subhead">
    Do more, faster. Community solutions to shared problems let you build
    better and faster than going it alone.
  </p>
{{/-ui/hero}}

<div class="featured">
  {{#each featured as |addon|}}
    {{addons/index/-page/featured-addon addon=addon}}
  {{/each}}
</div>

<div class="main">
  <nav class="addon-nav">
    {{addons/index/-page/search searchTerm=searchTerm}}
    {{addons/index/-page/categories}}
  </nav>
  <div class="addon-listings">
    {{#if hasResults}}
      {{addons/index/-page/search-results results=queryResults}}
    {{else}}
      {{addons/index/-page/default-listing}}
    {{/if}}
  </div>
</div>
