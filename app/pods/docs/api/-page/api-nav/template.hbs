<nav class="apis">
  {{#if groupByPackage}}
    {{#each-in byPackage as |pkgName apis|}}
      <div class="apis-group">
        <div class="group-header">
          {{pkgName}}
        </div>
        <div class="group-list">
          {{#each apis as |api|}}
            {{#link-to 'docs.apis.api' version.id api.slug title=api.shortDisplayName class='api-link'}}
              <i class='api-kind-icon {{api.kind}}'></i>
              {{api.shortDisplayName}}
            {{/link-to}}
          {{/each}}
        </div>
      </div>
    {{/each-in}}
  {{else}}
    <div class="apis-group">
      <div class="group-list">
        {{#each ungrouped as |api|}}
          {{#link-to 'docs.apis.api' version.id api.slug title=api.shortDisplayName class='api-link'}}
            <i class='api-kind-icon {{api.kind}}'></i>
            {{api.shortDisplayName}}
          {{/link-to}}
        {{/each}}
      </div>
    </div>
  {{/if}}
</nav>