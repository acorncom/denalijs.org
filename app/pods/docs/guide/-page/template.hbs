{{#with (lookup-page doc.pages (concat 'guides/' slug)) as |page|}}
  {{#-ui/hero}}

    {{#-ui/nav-list root=(lookup-page doc.pages 'guides') as |node|}}
      {{#link-to 'docs.guide' currentVersion node.slug}}
        {{node.title}}
      {{/link-to}}
    {{/-ui/nav-list}}

    {{-ui/docs/page-hero page=page}}

  {{/-ui/hero}}

  {{-ui/docs/page-body page=page}}

{{/with}}