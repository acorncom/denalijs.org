{{#with (lookup-page doc.pages (concat 'guides/' slug)) as |page|}}
  {{#-ui/hero}}

    {{#-ui/nav-list title='Guides' root=(lookup-page doc.pages 'guides') class='guides-nav' as |node slug|}}
      {{#link-to 'docs.guide' version.displayName slug}}
        {{node.title}}
      {{/link-to}}
    {{/-ui/nav-list}}

    {{-ui/docs/page-hero page=page}}

  {{/-ui/hero}}

  {{-ui/docs/page-body page=page}}

{{/with}}