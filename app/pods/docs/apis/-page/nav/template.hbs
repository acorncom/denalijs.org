<div class="api-list">
  {{#if groupByPackage}}
    {{#each-in byPackage as |pkgName pkg|}}
    {{log pkg}}
      <div class="pkg-group">
        <div class="pkg-header">{{pkgName}}</div>
        {{#each pkg as |entry|}}
          {{#link-to 'docs.apis.api' entry class='api-link'}}
            <i class='api-kind-icon {{entry.kind}}'></i>
            {{entry.shortDisplayName}}
          {{/link-to}}
        {{/each}}
      </div>
    {{/each-in}}
  {{else}}
    <div class="ungrouped">
      {{#each ungrouped as |entry|}}
        {{#link-to 'docs.apis.api' entry class='api-link'}}
          <i class='api-kind-icon {{entry.kind}}'></i>
          {{entry.shortDisplayName}}
        {{/link-to}}
      {{/each}}
    </div>
  {{/if}}
</div>

<div class="visibility-controls">
Group by package?:
{{input type='checkbox' checked=groupByPackage}}
</div>